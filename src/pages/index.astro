---
import BaseLayout from '../layouts/BaseLayout.astro';
import Carousel from '../components/Carousel/Carousel.astro';
---

<BaseLayout title="Nuestra Boda">
  <Carousel />

  <!-- Sección de Bienvenida -->
  <section id="bienvenida" class="py-8 bg-gray-100 text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-4">Bienvenidos a nuestra boda</h2>
      <p class="text-lg">Gracias por acompañarnos en este día tan especial. ¡Estamos emocionados de compartir este momento con ustedes!</p>
    </div>
  </section>

  <!-- Sección de Detalles del Evento -->
  <section id="detalles-evento" class="py-8 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-4 text-center">Detalles del Evento</h2>
      <ul class="list-disc list-inside">
        <li class="mb-2"><strong>Fecha:</strong> 14 de febrero de 2024</li>
        <li class="mb-2"><strong>Hora:</strong> 5:00 PM</li>
        <li class="mb-2"><strong>Lugar:</strong> Salón de eventos "La Bella Vida"</li>
      </ul>
    </div>
  </section>

  <!-- Sección de Galería -->
  <section id="galeria" class="py-8 bg-gray-100 text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-4">Galería de Fotos</h2>
      <p class="mb-4">Algunas fotos especiales que queremos compartir con ustedes.</p>
      <div class="grid grid-cols-3 gap-4">
        <div class="bg-gray-300 h-40"></div>
        <div class="bg-gray-300 h-40"></div>
        <div class="bg-gray-300 h-40"></div>
        <div class="bg-gray-300 h-40"></div>
        <div class="bg-gray-300 h-40"></div>
        <div class="bg-gray-300 h-40"></div>
      </div>
    </div>
  </section>

  <!-- Sección de Confirmación de Asistencia -->
  <section id="confirmacion-asistencia" class="py-8 bg-white text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-4">Confirma tu Asistencia</h2>
      <p class="mb-4">Por favor, ayúdanos confirmando tu asistencia antes del 31 de enero de 2024.</p>
      <button class="bg-blue-500 text-white px-4 py-2 rounded">Confirmar Asistencia</button>
    </div>
  </section>

  <!-- Sección de Mapa -->
  <section id="mapa" class="py-8 bg-gray-100 text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-4">¿Cómo Llegar?</h2>
      <p class="mb-4">Encuentra la ubicación del evento en el mapa a continuación.</p>
      <div class="bg-gray-300 h-80">[Aquí irá un mapa embebido]</div>
    </div>
  </section>

  <!-- Sección de Despedida -->
  <section id="despedida" class="py-8 bg-white text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-4">¡Gracias!</h2>
      <p class="text-lg">Agradecemos de corazón tu presencia en este día tan especial. ¡Nos vemos pronto!</p>
    </div>
  </section>
</BaseLayout>
