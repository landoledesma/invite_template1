---
import Background from '../components/Background.astro';
import Carousel from '../components/Carousel/Carousel.astro';
import Multimedia from '../components/Multimedia.astro';
import CartaInvitacion from '../components/CartaInvitacion.astro';
import PadresDelNovio from '../components/PadresDelNovio.astro';
import ContadorDelDia from '../components/ContadorDelDia.astro';
import VenueSection from '../components/Lugar/VenueSection.astro'; 
import { churchVenue, receptionVenue } from '../components/Lugar/venuesdata';
import Padrinos from '../components/Padrinos.astro';
import Intinerario from '../components/Intinerario.astro';
import CodigoDeVestimenta from '../components/CodigoDeVestimenta.astro';
import MesaDeRegalos from '../components/MesaDeRegalos.astro';
import Momentos from '../components/Momentos.astro';
import SugerenciaDeHospedajes from '../components/SugerenciaDeHospedajes.astro';
import ConfirmacionDeAsistencia from '../components/ConfirmacionDeAsistencia.astro';
import Despedida from '../components/Despedida.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
  </head>
  <body>
    <!-- Fondo animado -->
    <Background />

    <!-- Contenido principal -->
    <main>
      <!-- Carrusel de imágenes -->
      <Carousel />

      <!-- Sección multimedia -->
      <Multimedia />

      <!-- Sección de invitación dinámica -->
      <CartaInvitacion 
        titulo="¡Únete a nuestra celebración!" 
        mensaje="Estamos encantados de invitarte a unirte a nuestro día especial."
      />
      <PadresDelNovio 
        nombres={[
          "Carlos y Laura (padres del novio)", 
          "Andrea y Juan (padres de la novia)"
        ]}
      />
      <ContadorDelDia fechaEvento="2024-12-31" />
      
      <!-- Secciones de Venue (Ceremonia y Recepción) -->
      <div class="space-y-12 p-4">
        <VenueSection {...churchVenue} client="church" />
        <VenueSection {...receptionVenue} client="reception" />
      </div>

      <Padrinos/>
      <Intinerario />
      <CodigoDeVestimenta codigo="Formal" />
      <MesaDeRegalos enlace="https://ejemplo.com/mesa-de-regalos" />
      <Momentos momentos={["Entrada de los novios", "Primer baile", "Corte del pastel"]} />
      <SugerenciaDeHospedajes 
        hoteles={[
          { nombre: "Hotel ABC", direccion: "Calle 123, Ciudad" },
          { nombre: "Hotel XYZ", direccion: "Av. Principal 456, Ciudad" }
        ]}
      />
      <ConfirmacionDeAsistencia enlace="https://ejemplo.com/confirmar-asistencia" />
      <Despedida mensaje="Gracias por formar parte de este día tan especial. ¡Te esperamos con emoción!" />
    </main>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  /* Estilo base */
  body {
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    position: relative;
    background: #f7f8fa; /* Color de fondo suave */
  }

  /* Estilo del contenido principal */
  main {
    position: relative;
    z-index: 1;
    padding: 20px;
  }

  /* Personalización del carrusel */
  .carousel {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
  }

  .carousel img {
    max-width: 100%;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* Fondo animado */
  .background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    animation: backgroundMove 10s infinite linear;
  }

  @keyframes backgroundMove {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 100% 100%;
    }
  }
</style>