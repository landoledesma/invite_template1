---
import Background from '../components/Background.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Carga del fondo animado -->
    <Background />
    <!-- Contenido principal -->
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    position: relative;
  }

  main {
    position: relative;
    z-index: 1;
  }
</style>