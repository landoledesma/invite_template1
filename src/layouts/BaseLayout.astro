---
import Background from '../components/Background.astro';
import Carousel from '../components/Carousel/Carousel.astro';
import Multimedia from '../components/Multimedia.astro';
import CartaInvitacion from '../components/CartaInvitacion.astro';
import PadresDelNovio from '../components/PadresDelNovio.astro';
import ContadorDelDia from '../components/ContadorDelDia.astro';
import VenueSection from '../components/Lugar/VenueSection.astro'; 
import { churchVenue, receptionVenue } from '../components/Lugar/venuesdata';
import Padrinos from '../components/Padrinos.astro';
import Intinerario from '../components/Intinerario.astro';
import CodigoDeVestimenta from '../components/CodigoDeVestimenta.astro';
import MesaDeRegalos from '../components/MesaDeRegalos.astro';
import Momentos from '../components/momentos/Momentos.astro';
import SugerenciaDeHospedajes from '../components/SugerenciaDeHospedajes.astro';
import ConfirmacionDeAsistencia from '../components/ConfirmacionDeAsistencia.astro';
import Despedida from '../components/Despedida.astro';


interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="overflow-x-hidden w-full box-border">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
  </head>
  <body>
    <!-- Fondo animado -->
    <Background />

    <!-- Contenido principal -->
    <main class="relative z-10 p-5 max-w-full overflow-x-hidden mx-auto box-border">
      <!-- Carrusel de imágenes -->
      <Carousel />

      <!-- Sección multimedia -->
      <Multimedia />

      <!-- Sección de invitación dinámica -->
      <CartaInvitacion 
        titulo="¡Únete a nuestra celebración!" 
        mensaje="Estamos encantados de invitarte a unirte a nuestro día especial."
      />
      <PadresDelNovio 
        nombres={[
          "Carlos y Laura (padres del novio)", 
          "Andrea y Juan (padres de la novia)"
        ]}
      />
      <ContadorDelDia fechaEvento="2024-12-31" />
      
      <!-- Secciones de Venue (Ceremonia y Recepción) -->
      <div class="space-y-12 p-4 w-full box-border">
        <VenueSection {...churchVenue} client="church" />
        <VenueSection {...receptionVenue} client="reception" />
      </div>

      <Padrinos/>
      <Intinerario />
      <CodigoDeVestimenta codigo="Formal" />
      <MesaDeRegalos enlace="https://ejemplo.com/mesa-de-regalos" />
      <Momentos momentos={["Entrada de los novios", "Primer baile", "Corte del pastel"]} />
      <SugerenciaDeHospedajes 
        hoteles={[
          { nombre: "Hotel ABC", direccion: "Calle 123, Ciudad" },
          { nombre: "Hotel XYZ", direccion: "Av. Principal 456, Ciudad" }
        ]}
      />
      <ConfirmacionDeAsistencia enlace="https://ejemplo.com/confirmar-asistencia" />
      <Despedida mensaje="Gracias por formar parte de este día tan especial. ¡Te esperamos con emoción!" />
    </main>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  /* Reseteo global */
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  /* Reglas para imágenes */
  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  /* Estilo base */
  html {
    overflow-x: hidden;
    width: 100%;
    box-sizing: border-box;
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    width: 100%;
    position: relative;
    background: #f7f8fa;
    overflow-x: hidden;
    box-sizing: border-box;
  }

  /* Estilo del contenido principal */
  main {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 100vw;
    overflow-x: hidden;
    margin: 0 auto;
    padding: 20px;
    box-sizing: border-box;
  }

  /* Personalización del carrusel */
  .carousel {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    max-width: 100%;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Para Firefox */
    -ms-overflow-style: none; /* Para IE y Edge */
    padding: 0;
    margin: 0;
  }

  .carousel::-webkit-scrollbar {
    display: none; /* Para Chrome, Safari y Opera */
  }

  .carousel img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* Fondo animado */
  .background {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    z-index: 0;
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    background-size: 200% 200%;
    animation: backgroundMove 10s infinite linear;
    overflow: hidden;
  }

  @keyframes backgroundMove {
    0% {
      background-position: 0% 0%;
    }
    100% {
      background-position: 100% 100%;
    }
  }

  /* Estilos para contenedores */
  .container {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding: 0 1rem;
    box-sizing: border-box;
  }

  /* Media queries para responsividad */
  @media (max-width: 768px) {
    body {
      font-size: 14px;
    }

    main {
      padding: 10px;
    }
  }

  /* Utilidades adicionales */
  .w-full {
    width: 100%;
  }

  .overflow-hidden {
    overflow: hidden;
  }

  .relative {
    position: relative;
  }
</style>