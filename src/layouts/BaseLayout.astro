---
import Backround from '../components/Backround.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Carga del fondo animado -->
    <Backround />
    <!-- Contenido principal -->
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    position: relative;
  }

  main {
    position: relative;
    z-index: 1; /* Para que el contenido est√© por encima del fondo */
  }
</style>
