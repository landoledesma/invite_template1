---
interface Props {
  imageUrl?: string;
  altText?: string;
  containerClass?: string;
}

const {
  imageUrl = "/img/itinerario.jpg",
  altText = "Descripci√≥n de la imagen",
  containerClass = "min-h-screen" // Clase por defecto
} = Astro.props;
---

<div class={`relative flex items-center justify-center ${containerClass} w-full p-4`}>
  <div class="relative w-full max-w-7xl mx-auto">
    <div class="w-full h-full">
      <img 
        src={imageUrl} 
        alt={altText} 
        class="max-w-full max-h-full w-auto h-auto mx-auto object-contain"
        loading="lazy"
      />
    </div>
  </div>
</div>

<style>
  img {
    max-height: calc(100vh - 2rem);
    width: auto;
    margin: 0 auto;
  }
</style>