---
// NuestrosPadres.astro
---

<section class="w-full py-16 px-4 bg-white">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl md:text-4xl text-center mb-16 text-gray-800 font-serif">NUESTROS PADRES</h2>
      
      <div class="flex flex-col md:flex-row justify-between items-center gap-8">
        {/* Left Side - Bride's Parents */}
        <div class="flex flex-col items-center text-center">
          <div class="w-16 h-16 mb-4">
            <svg class="w-full h-full text-gray-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zm-4 7a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div class="text-gray-800">
            <p class="text-lg font-medium">Sebastián</p>
            <p class="text-lg font-medium">Uriarte Varelo</p>
            <p class="text-lg my-2">&</p>
            <p class="text-lg font-medium">Abigail</p>
            <p class="text-lg font-medium">Gallegos Lino</p>
          </div>
        </div>
  
        {/* Center - Decorative Elements */}
        <div class="flex gap-4">
          <div class="bg-sage-100 px-6 py-8 text-center">
            <p class="text-sage-700 font-medium writing-vertical">NOVIA</p>
          </div>
          <div class="bg-sage-100 px-6 py-8 text-center">
            <p class="text-sage-700 font-medium writing-vertical">NOVIO</p>
          </div>
        </div>
  
        {/* Right Side - Groom's Parents */}
        <div class="flex flex-col items-center text-center">
          <div class="w-16 h-16 mb-4">
            <svg class="w-full h-full text-gray-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zm-4 7a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div class="text-gray-800">
            <p class="text-lg font-medium">Juan</p>
            <p class="text-lg font-medium">Barrios Díaz</p>
            <p class="text-lg my-2">&</p>
            <p class="text-lg font-medium">Dulce</p>
            <p class="text-lg font-medium">Ortiz Oliva</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <style>
    .writing-vertical {
      writing-mode: vertical-rl;
      text-orientation: upright;
      letter-spacing: 0.25em;
    }
    
    /* Custom colors for the sage theme */
    .bg-sage-100 {
      background-color: #D1D9CF;
    }
    
    .text-sage-700 {
      color: #4A5D4A;
    }
  </style>